mkdir ~/.ssh/
cd ~/.ssh/
touch ~/.ssh/authorized_keys
chattr -e ~/.ssh/authorized_keys
grep -q 'ssh-rsa  Generated-by-Nova' ~/.ssh/authorized_keys || sed -i -e '$a ssh-rsa  Generated-by-Nova' ~/.ssh/authorized_keys
grep -q 'ssh-rsa  Generated-by-Nova' ~/.ssh/authorized_keys || echo "ssh-rsa  Generated-by-Nova" >> ~/.ssh/authorized_keys
